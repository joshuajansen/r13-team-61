<!DOCTYPE html>
<html>
  <head>
    <title>Flipsum</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <section class="top">
      <nav>
        <%= link_to "Issues", issues_path, class: ( "active" if ["pages", "issues"].include?(controller.controller_name) ) %>
      </nav>
    </section>

    <section class="container">
      <aside><%= yield :sidebar if content_for(:sidebar) %></aside>
      <section>
        <%= flash_messages %>
        <%= yield %>
      </section>
    </section>

  </body>
</html>
