<section class="issue_settings">
  <h1>Issue settings</h1>
  <%= form_for @issue do |f| %>
    <p><%= f.label :name %><br />
      <%= f.text_field :name %></p>

    <p>
      <%= f.label :css, "Custom css rules for this issue:"%><br/>
      <%= f.text_area :css, rows: "20", cols: "60" %>
    </p>

    <p><button class="button">Save</button></p>
  <% end %>

  <hr />

  <%= link_to fa_icon("trash", text: "Remove this issue"), issue_path(@issue), method: :delete, data: { confirm: "Are you really sure you want to delete: #{@issue.name}?" }, class: 'remove button' %>
</section>